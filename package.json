{
  "name": "@mux-elements/elements",
  "engines": {
    "node": "^14.17.0",
    "npm": "^7.17.0"
  },
  "version": "0.1.0",
  "description": "Custom elements for working with media in the browser that Just Workâ„¢",
  "main": "index.js",
  "repository": "https://github.com/muxinc/elements",
  "author": "Mux, Inc.",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "scripts/*",
    "shared/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "lerna run lint --scope @mux-elements/*",
    "test": "lerna run test --scope @mux-elements/*",
    "dev": "lerna run dev --parallel --scope @mux-elements/*",
    "build": "lerna run build",
    "prepare": "husky install && yarn build --scope @mux-elements/*",
    "release": "lerna publish --no-private",
    "version:update": "lerna version --no-private"
  }
}
