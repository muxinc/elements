{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "target": "ES2019",
    "module": "es6",
    "jsx": "react",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
