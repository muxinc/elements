---
import Layout from '../layouts/Layout.astro';
import { MuxPlayer } from '@mux/mux-player-astro';
---

<Layout>
  <MuxPlayer
    id="mux-player-poster-slot"
    style={{
      display: 'block',
      aspectRatio: '16/9',
      backgroundColor: '#000',
      margin: '1rem 0 2rem',
    }}
    muted
    streamType="on-demand"
    playbackId="VcmKA6aqzIzlg3MayLJDnbF55kX00mds028Z65QxvBYaA"
  >
    <img
      style="display: block; object-fit: contain; height: 100%;"
      slot="poster"
      src="https://image.mux.com/VcmKA6aqzIzlg3MayLJDnbF55kX00mds028Z65QxvBYaA/thumbnail.webp"
    />
  </MuxPlayer>
</Layout>