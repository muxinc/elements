---
import type { MuxPlayerProps } from './types';
import { toNativeAttributes } from './utils';
type Props = MuxPlayerProps;
const { theme, mediaChromeTheme, ...props } = Astro.props;
const Theme = theme?.component;
---

<mux-player {...toNativeAttributes(props)} theme={theme?.name ?? mediaChromeTheme}><slot /></mux-player>
{Theme && <Theme />}
<script>
  import '@mux/mux-player';
</script>
