{
  "name": "@mux-elements/mux-video",
  "version": "0.1.6-beta.1",
  "type": "commonjs",
  "description": "A custom mux video element for the browser that Just Worksâ„¢",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/muxinc/elements",
    "directory": "packages/mux-video"
  },
  "author": "Mux, Inc.",
  "license": "MIT",
  "scripts": {
    "dev": "snowpack dev --config snowpack.dev.config.cjs",
    "build:esm": "esbuild src/index.ts --target=es2020 --bundle --sourcemap --format=esm --outdir=dist --out-extension:.js=.mjs --define:PLAYER_VERSION=\"'$npm_package_version'\"",
    "build:iife": "esbuild src/index.ts --target=es2020 --bundle --sourcemap --format=iife --outdir=dist --define:PLAYER_VERSION=\"'$npm_package_version'\"",
    "build:cjs": "esbuild src/index.ts --target=es2020 --bundle --sourcemap --format=cjs --outdir=dist --out-extension:.js=.cjs --define:PLAYER_VERSION=\"'$npm_package_version'\"",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir './dist/types'",
    "build": "npm-run-all build:esm build:iife build:cjs build:types"
  },
  "dependencies": {
    "hls.js": "1.0.11",
    "mux-embed": "^4.2.3"
  },
  "devDependencies": {
    "esbuild": "^0.13.13"
  }
}
