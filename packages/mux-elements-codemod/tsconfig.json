{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "rootDir": "src",
    "outDir": "./dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
