{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "../../types"]
  },
  "include": ["src/**/*", "../../types"]
}
