{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "rootDir": "src",
    "outDir": "./dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "target": "ES2019",
    "module": "es6",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "../../types"]
  },
  "include": ["src/**/*", "../../types"]
}
